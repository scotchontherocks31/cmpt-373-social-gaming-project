{
    "configuration": {
        "name": "Fav Food",
        "player count": {"min": 1, "max": 4},
        "audience": false,
        "setup": {
          "Rounds": 3
        }
    },

    "rules": [
        {
            "rule": "parallelfor",
            "list": "players",
            "element": "player",
            "rules":[
                { 
                    "rule": "input-text",
                    "to": "player",
                    "prompt": "What is your favorite food?",
                    "result": "player.food"
                },
                {
                    "rule": "global-message",
                    "value": "{player.food} is your favorite" 
                }
            ]
        }   
    ]
}